script/source = "extends Control

@export var in_game_scn := preload(\"res://InGame.tscn\")
@export var hostname := \"127.0.0.1:5000\"
@export var new_game_route := \"create-lobby\"
@export var join_game_route := \"join-lobby\"
@export var use_HTTPS := true

@onready var socket := %WebSocket
@onready var http_req := %HTTPRequest
@onready var username_line = %UsernameLine
@onready var lobby_id_line = %LobbyIDLine
@onready var new_game_btn = %NewGameBtn
@onready var join_game_btn = %JoinGameBtn
@onready var connection_lbl = %ConnectionStatLbl
@onready var retry_conn_btn = %RetryConnBtn

var username : String :
	get:
		return username_line.text
var lobby_id : String :
	get:
		return lobby_id_line.text

func _ready():
	lockdown()
	retry_conn_btn.visible = false
	
	# gotta make sure
	hostname = hostname\\
				.trim_prefix(\"http://\")\\
				.trim_prefix(\"https://\")
				
	print(hostname)
	
	socket.host = hostname
	
	socket.connect_socket()

func set_editable(val: bool):
	username_line.editable = val
	lobby_id_line.editable = val

func lockdown():
	new_game_btn.disabled = true
	join_game_btn.disabled = true
	set_editable(false)

func _on_web_socket_connected(url):
	print(\"Socket connected to %s\" % [url])
	connection_lbl.text = \"Connected!\"
	set_editable(true)

func _on_web_socket_closed(code, reason):
	print(\"WebSocket closed with code: %d, reason '%s'. Clean: %s\" % [code, reason, code != -1])
	lockdown()
	
func _on_web_socket_received(data):
	if data != null and len(data) > 0:
		print(data.get_string_from_ascii())

func _on_web_socket_connect_failed():
	print(\"Socket failed to connect to server\")
	retry_conn_btn.visible = true
	connection_lbl.text = \"Connection Failed!\"

func _on_http_request_completed(result, response_code, headers, body: PackedByteArray):
	print(\"HTTP request response code: %d\" % response_code)
	var l = (body.get_string_from_ascii())
	
	if response_code == 200:
		Globals.username = username
		Globals.lobby_id = l
		
		get_tree().change_scene_to_packed(in_game_scn)

func _on_new_game_btn_pressed():
	var p := \"https\" if use_HTTPS else \"http\"
	http_req.request(\"%s://%s/%s/%s\" % [p, hostname, new_game_route, username])

func _on_join_game_btn_pressed():
	var p := \"https\" if use_HTTPS else \"http\"
	http_req.request(\"%s://%s/%s/%s/%s\" % [p, hostname, join_game_route, username, lobby_id])

func _on_username_line_text_changed(new_text):
	new_game_btn.disabled = (new_text == \"\")
	join_game_btn.disabled = (new_text == \"\" or lobby_id == \"\")

func _on_lobby_id_line_text_changed(new_text):
	print(new_text)
	join_game_btn.disabled = (new_text == \"\" or username == \"\")

func _on_retry_conn_btn_pressed():
	socket.connect_socket()
	retry_conn_btn.visible = false
	connection_lbl.text = \"Connecting...\"
"

